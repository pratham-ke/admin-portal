    "express": "^4.18.2",
    "jodit-react": "^5.2.19",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "mysql2": "^3.6.1",
    "react-toastify": "^11.0.5",
    "sequelize": "^6.33.0"
  },
  "devDependencies": {
    "@types/babel__core": "^7.20.5",
    "@types/babel__traverse": "^7.20.7",
    "@types/jest": "^30.0.0",
    "@types/parse-json": "^4.0.2",
    "concurrently": "^8.2.1",
    "nodemon": "^3.0.1"
  }
}
